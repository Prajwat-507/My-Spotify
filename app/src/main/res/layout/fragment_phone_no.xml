<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".auth.PhoneSignIn.PhoneNoFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/phoneno_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:background="@color/bg_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/title_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:fontFamily="@font/avenirnext_cyr_bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneno_toolbar">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter phone number"
            android:textSize="@dimen/_24sdp"
            android:fontFamily="@font/avenirnext_cyr_bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_8sdp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:elevation="@dimen/_8sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:background="@color/grey"
                    android:gravity="center_vertical"
                    android:text="India"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/avenirnextcyr_medium"
                    android:drawableEnd="@drawable/baseline_arrow_forward"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phoneCode"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@color/grey"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text="+91"
                        android:textColor="@color/white"
                        android:fontFamily="@font/avenirnextcyr_medium"
                        android:textSize="@dimen/_16sdp"/>

                    <EditText
                        android:id="@+id/et_phoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_42sdp"
                        android:background="@color/grey"
                        android:gravity="center_vertical"
                        android:hint="Phone number"
                        android:inputType="number"
                        android:cursorVisible="true"
                        android:textColorHint="#A1DDDDDD"
                        android:textColor="@color/white"
                        android:fontFamily="@font/avenirnextcyr_medium"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:textSize="@dimen/_16sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="We'll send you a code to confirm your phone number."
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/avenirnextcyr_medium"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"

            android:text="We may occassionally send you service based messages."
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/avenirnextcyr_medium"
            android:maxLines="1"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_42sdp"
            android:background="@drawable/btn_bg"
            android:text="Next"
            android:fontFamily="@font/avenirnext_cyr_bold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:letterSpacing="0.011"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_82sdp"
            android:backgroundTint="@color/grey"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>